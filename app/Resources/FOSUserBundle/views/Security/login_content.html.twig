{% trans_default_domain 'FOSUserBundle' %}


<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-5">
        <div class="card mt-5">
            <div class="card-block">
                <h4 class="card-title">Авторизация</h4>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {% endif %}
                    <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input class="form-control" type="text" id="username" name="_username"
                               value="{{ last_username }}"
                               required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input class="form-control" type="password" id="password" name="_password" required="required"/>
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" id="remember_me" class="form-check-input" name="_remember_me"
                                   value="on"/>
                            {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                    <div class="form-group text-center">
                        <input class="btn btn-primary" type="submit" id="_submit" name="_submit"
                               value="{{ 'security.login.submit'|trans }}"/>
                    </div>
                </form>
            </div>
            <div class="card-footer text-muted">
                <div class="row">
                    <div class="col-md-6">
                        <small><a href="{{ path('fos_user_resetting_request') }}"> Забыли парооль?</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

