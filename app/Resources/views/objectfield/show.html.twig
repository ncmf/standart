{% extends 'base.html.twig' %}

{% block body %}
    <h1>Свойство объекта</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ objectField.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ objectField.name }}</td>
            </tr>
            <tr>
                <th>Код</th>
                <td>{{ objectField.code }}</td>
            </tr>
            <tr>
                <th>Тип данных</th>
                <td>{{ objectField.fieldType.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_objectfield_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_objectfield_edit', { 'id': objectField.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
