{% extends 'base.html.twig' %}

{% block body %}
    <h1>Section</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ section.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ section.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ section.code }}</td>
            </tr>
            <tr>
                <th>Lft</th>
                <td>{{ section.lft }}</td>
            </tr>
            <tr>
                <th>Rgt</th>
                <td>{{ section.rgt }}</td>
            </tr>
            <tr>
                <th>Lvl</th>
                <td>{{ section.lvl }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_section_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_section_edit', { 'id': section.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
