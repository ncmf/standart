{% extends 'base.html.twig' %}

{% block body %}
    <h1>Instances list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for instance in instances %}
            <tr>
                <td><a href="{{ path('admin_instance_show', { 'id': instance.id }) }}">{{ instance.id }}</a></td>
                <td>{{ instance.name }}</td>
                <td>{{ instance.code }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_instance_show', { 'id': instance.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_instance_edit', { 'id': instance.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_instance_new') }}">Create a new instance</a>
        </li>
    </ul>
{% endblock %}
