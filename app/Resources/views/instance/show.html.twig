{% extends 'base.html.twig' %}

{% block body %}
    <h1>Instance</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ instance.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ instance.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ instance.code }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_instance_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_instance_edit', { 'id': instance.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
